{
    "compilerOptions": {
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "noLib": false,
      "downlevelIteration": true,
      "target": "ES5",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "es6",
        "dom"
      ],
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "~/*": [
          "./*"
        ],
        "@/*": [
          "./*"
        ]
      },
      "types": [
        "@types/node",
        "@nuxt/types"
      ]
    },
    "exclude": [
      "node_modules/*"
    ]
  }